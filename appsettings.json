{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=portfolio.db;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "File": {
      "Path": "Logs/log-.txt",
      "Append": true,
      "FileSizeLimitBytes": 10485760, // 10MB
      "MaxRollingFiles": 7
    }
  },
  "AdminCredentials": {
    "Email": "admin@example.com",
    "PasswordHash": "", // Uygulama ilk çalıştığında otomatik oluşturulacak
    "PasswordSalt": ""  // Uygulama ilk çalıştığında otomatik oluşturulacak
  },
  "Security": {
    "MaxLoginAttempts": 5,
    "LockoutTimeInMinutes": 15,
    "SessionTimeoutInMinutes": 30,
    "RequireHttps": false,
    "PasswordPolicy": {
      "RequiredLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true
    }
  },
  "Cors": {
    "AllowedOrigins": [ "https://example.com" ]
  },
  "AllowedHosts": "*",
  "IsDevelopment": true
}
