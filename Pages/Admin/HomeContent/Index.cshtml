@page
@model PortfolioApp.Pages.Admin.HomeContent.IndexModel
@{
    ViewData["Title"] = "Sayfa İçerikleri";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sayfa İçerikleri</h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Sayfa İçerikleri Listesi</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Sayfa Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var content in Model.HomeContents)
                                {
                                    <tr>
                                        <td>@content.PageName</td>
                                        <td>
                                            <a href="/Admin/HomeContent/Edit/@content.Id" class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i> Düzenle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
