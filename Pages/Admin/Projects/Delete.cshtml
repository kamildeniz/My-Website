@page "{id:int}"
@model PortfolioApp.Pages.Admin.Projects.DeleteModel
@{
    ViewData["Title"] = "Projeyi Sil: " + Model.Project.Title;
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Projeyi Sil</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>
</div>

<div class="alert alert-danger">
    <h4>Bu projeyi silmek istediğinizden emin misiniz?</h4>
    <p>Bu işlem geri alınamaz. Aşağıdaki proje kalıcı olarak silinecektir:</p>
    
    <dl class="row">
        <dt class="col-sm-2">Başlık:</dt>
        <dd class="col-sm-10">@Model.Project.Title</dd>
        
        <dt class="col-sm-2">Açıklama:</dt>
        <dd class="col-sm-10">@Model.Project.Description</dd>
        
        <dt class="col-sm-2">Teknolojiler:</dt>
        <dd class="col-sm-10">@Model.Project.Technologies</dd>
        
        <dt class="col-sm-2">Oluşturulma:</dt>
        <dd class="col-sm-10">@Model.Project.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
        
        @if (!string.IsNullOrEmpty(Model.Project.ImageUrl))
        {
            <dt class="col-sm-2">Görsel:</dt>
            <dd class="col-sm-10">
                <img src="@Model.Project.ImageUrl" alt="@Model.Project.Title" class="img-thumbnail" style="max-width: 200px;" />
            </dd>
        }
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Project.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Sil
        </button>
        <a asp-page="./Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
