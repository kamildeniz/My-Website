<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kişisel Portföy</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">Portföy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @{
                            var currentPage = ViewContext.RouteData.Values["Page"]?.ToString() ?? string.Empty;
                        }
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Index" ? "active" : "")" 
                               asp-page="/Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/About" ? "active" : "")" 
                               asp-page="/About">Hakkımda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Projects/Index" ? "active" : "")" 
                               asp-page="/Projects/Index">Projeler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Blog/Index" ? "active" : "")" 
                               asp-page="/Blog/Index">Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentPage == "/Contact" ? "active" : "")" 
                               asp-page="/Contact">İletişim</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white mt-auto">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5>İletişim Bilgileri</h5>
                    <p class="mb-1"><i class="bi bi-envelope me-2"></i> email@example.com</p>
                    <p class="mb-1"><i class="bi bi-telephone me-2"></i> +90 555 123 45 67</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h5>Sosyal Medya</h5>
                    <div class="social-links">
                        <a href="#" class="text-white me-3"><i class="bi bi-github fs-4"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-linkedin fs-4"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter-x fs-4"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-instagram fs-4"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center">
                &copy; @DateTime.Now.Year - Tüm Hakları Saklıdır
            </div>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
