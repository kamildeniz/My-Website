@page
@model PortfolioApp.Pages.AboutModel
@{
    ViewData["Title"] = "Hakkımda";
}

@if (Model.AboutContent != null)
{
    <!-- Page Header -->
    <section class="py-5 bg-light">
        <div class="container py-4">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="fw-bold">@(string.IsNullOrEmpty(Model.AboutContent.MetaTitle) ? "Hakkımda" : Model.AboutContent.MetaTitle)</h1>
                    @if (!string.IsNullOrEmpty(Model.AboutContent.MetaDescription))
                    {
                        <p class="lead text-muted">@Model.AboutContent.MetaDescription</p>
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="p-3 p-lg-5">
                        @Html.Raw(Model.AboutContent.Content)
                        <div class="mt-4">
                            <a href="/contact" class="btn btn-primary me-2">
                                <i class="bi bi-envelope me-2"></i>İletişime Geç
                            </a>
                            <a href="/projects" class="btn btn-outline-primary">
                                <i class="bi bi-code-square me-2"></i>Projelerimi Gör
                            </a>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.AboutContent.ImageUrl))
                {
                    <div class="col-lg-6">
                        <div class="p-3">
                            <img src="@Model.AboutContent.ImageUrl" alt="@Model.Profile?.FullName" class="img-fluid rounded-3 shadow">
                        </div>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.Profile?.ProfileImageUrl))
                {
                    <div class="col-lg-6">
                        <div class="p-3">
                            <img src="@Model.Profile.ProfileImageUrl" alt="@Model.Profile.FullName" class="img-fluid rounded-3 shadow">
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
else
{
    <!-- Fallback content if AboutContent is not found -->
    <section class="py-5 bg-light">
        <div class="container py-4">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="fw-bold">Hakkımda</h1>
                    <p class="lead text-muted">Kendimi tanıtayım ve yeteneklerimden bahsedeyim</p>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="p-3 p-lg-5">
                        <h2 class="h3 mb-4">Merhaba, ben @Model.Profile?.FullName</h2>
                        <p class="lead">@Model.Profile?.Title</p>
                        <p>@Model.Profile?.AboutMe</p>
                        <div class="mt-4">
                            <a href="/contact" class="btn btn-primary me-2">
                                <i class="bi bi-envelope me-2"></i>İletişime Geç
                            </a>
                            <a href="/projects" class="btn btn-outline-primary">
                                <i class="bi bi-code-square me-2"></i>Projelerimi Gör
                            </a>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Profile?.ProfileImageUrl))
                {
                    <div class="col-lg-6">
                        <div class="p-3">
                            <img src="@Model.Profile.ProfileImageUrl" alt="@Model.Profile.FullName" class="img-fluid rounded-3 shadow">
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

